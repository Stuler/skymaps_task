{block content}
	{control formCompany}
	{ifset $companyId}
		<a n:href="editEmployee">Add employee</a>
		{ifset $hierarchy}
			<ul>
				{foreach $hierarchy as $employee}
					<li>
						<a n:href="editEmployee employeeId => $employee['id']">{$employee['name']}</a> <a class="ajax" n:href="deleteEmployee! id => $employee['id']">X</a>
                        {if isset($employee['subordinates'])}
							{include 'subordinates.latte', subordinates => $employee['subordinates']}
						{/if}
					</li>
				{/foreach}
			</ul>
		{else}
			<p>No employees found.</p>
		{/ifset}
	{/ifset}
{/block}
